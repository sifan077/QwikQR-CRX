{
    "manifest_version": 3,
    "name": "SnapQR",
    "description": "A chrome extension to snap QR codes",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "SnapQR",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["https://github.com/*"]
    }],
    "web_accessible_resources": [{
        "resources": ["popup/qrcode.min.js"],
        "matches": ["<all_urls>"]
    }]
}
