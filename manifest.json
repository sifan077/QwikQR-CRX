{
    "manifest_version": 3,
    "name": "QwikQR",
    "description": "A chrome extension to generate and scan QR codes",
    "version": "0.0.3",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "QwikQR",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "clipboardWrite",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["<all_urls>"]
    }],
    "web_accessible_resources": [{
        "resources": ["popup/qrcode.min.js", "popup/jsQR.min.js"],
        "matches": ["<all_urls>"]
    }]
}
